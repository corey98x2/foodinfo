<h1>Listing items</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Image URL</th>
      <th>Place</th>
      <th>Price</th>
      <th>Special</th>
      <th>Rating</th>
      <th>User</th>
      <th>Date</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.image_url %></td>
        <td><%= item.place %></td>
        <td><%= item.price %></td>
        <td><%= item.special %></td>
        <td><%= item.rating %></td>
        <td><%= item.user %></td>
        <td><%= item.date %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

